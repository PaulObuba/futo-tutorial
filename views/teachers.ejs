<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Custom Style Link -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Courses Style link -->
  <link rel="stylesheet" href="/css/admin.css" />

  <!-- Font awesome link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />

  <!-- Bootstrap PopUp link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />

  <title>Admin</title>
</head>

<body>
  <div class="main-container">
    <!-- LEFT SECTION STARTS -->
    <div class="left-section">
      <div class="nav-toggler">
        <span></span>
      </div>

      <div class="title">
        <a><span>A</span>dmin</a>
      </div>

      <div class="nav">
        <ul>
          <li>
            <a href="./admin"> <i class="fa fa-home"></i> Home </a>
          </li>
          <li>
            <a href="./courses">
              <i class="fa-brands fa-discourse"></i> Courses
            </a>
          </li>
          <li>
            <a href="./events"> <i class="fa fa-list"></i> Events </a>
          </li>
          <li>
            <a href="./students">
              <i class="fa-sharp fa-solid fa-street-view"></i> Students
            </a>
          </li>
          <li>
            <a href="./teachers" class="active">
              <i class="fa-solid fa-person-chalkboard"></i> Teachers
            </a>
          </li>
          <li>
            <a href="./notification">
              <i class="fa-solid fa-bell"></i> Notification
            </a>
          </li>
          <li class="dropdown">
            <button id="dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <i class="fa-sharp fa-solid fa-caret-down"></i>
              Logout
            </button>
            <div class="dropdown-menu" aria-labelledby="dropdown">
              <a class="dropdown-item" href="/home">Login as user</a>
              <a class="dropdown-item" href="/">Logout</a>
            </div>
          </li>
        </ul>
      </div>
    </div>

    <!-- RIGHT SECTION STARTS -->
    <div class="table-section">
      <div class="table-container">
        <div class="table-header">
          <h2>Teachers</h2>
          <button class="btn" data-toggle="modal" data-target="#modalLoginForm">
            Add Teacher
          </button>
        </div>

        <!-- Add course Popup -->

        <!-- Modal -->

        <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-keyboard="false" data-backdrop="static">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-semi-bold">
                  Add Teacher
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="/teachers" method="post">
                <div class="modal-body mx-3">
                  <div class="md-form mb-3">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Image:</label>
                    <input type="file" id="defaultForm-file" class="form-control validate" name="image" required />
                  </div>

                  <div class="md-form mb-3">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Title:</label>
                    <input type="text" id="defaultForm-email" class="form-control validate" name="title" required />
                  </div>

                  <div class="md-form mb-3">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Name:</label>
                    <input type="text" id="defaultForm-email" class="form-control validate" name="name" required />
                  </div>

                  <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Description:</label>
                    <input type="text" id="defaultForm-pass" class="form-control validate" name="description" required />
                  </div>

                  <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Social links:</label>
                    <input type="text" id="defaultForm-pass" class="form-control validate" name="links" />
                  </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                  <input class="btn" data-toggle="modal" type="submit" value="Add" />
                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Add course Popup ends -->
        
        <!-- Delete Modal confirmation -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true" data-keyboard="false" data-backdrop="static">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title font-weight-bold text-xl" id="exampleModalLabel">Delete Teacher </h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
              Are you sure you want to delete this Teacher?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="confirmDelete('no')">Cancle</button>
              <button type="button" class="btn btn-danger"  onclick="confirmDelete('yes')"> Delete </button> 
            </div>
          </div>
        </div>
      </div>
      <!-- Delete Modal confirmation Ends -->

        <div style="overflow-x: auto">
          <table>
            <tr>
              <th>S/N</th>
              <th>Image</th>
              <th>Title</th>
              <th>Name</th>
              <th>Description</th>
              <th>Social links</th>
              <th>Action</th>
            </tr>

            <tbody>
              <% teachers.forEach((teacher, index)=> { %>
                <tr>
                  <td><%- index %></td>
                  <td><%- teacher.image %></td>
                  <td><%- teacher.title %></td>
                  <td><%- teacher.name %></td>
                  <td><%- teacher.description %></td>
                  <td><%- teacher.links[0] %></td>
                  <td>
                    <a class="fa-solid fa-pen"></a>
                    <a class="fa-solid fa-trash-can" data-toggle="modal" data-target="#deleteModal"></a>
                  </td>
                </tr>
                <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

    
  <!-- Coustom JS link -->
  <script src="/js/server.js"></script>
</body>

</html>