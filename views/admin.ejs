<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Custom Style Link -->
  <link rel="stylesheet" href="/css/style.css" />

  <!-- Courses Style link -->
  <link rel="stylesheet" href="/css/admin.css" />

  <!-- Font awesome link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />

  <!-- Bootstrap PopUp link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />

  <title>Admin</title>
</head>

<body>

  <!-- LEFT SECTION STARTS -->
  <div class="left-section">

    <div class="nav-toggler">
      <span></span>
    </div>

    <div class="title">
      <a><span>A</span>dmin</a>
    </div>

    <div class="nav">
      <ul>
        <li>
          <a href="./admin" class="active"> <i class="fa fa-home"></i> Home </a>
        </li>
        <li>
          <a href="./courses">
            <i class="fa-brands fa-discourse"></i> Courses
          </a>
        </li>
        <li>
          <a href="./events">
            <i class="fa fa-list"></i> Events
          </a>
        </li>
        <li>
          <a href="./students">
            <i class="fa-sharp fa-solid fa-street-view"></i> Students
          </a>
        </li>
        <li>
          <a href="./teachers">
            <i class="fa-solid fa-person-chalkboard"></i> Teachers
          </a>
        </li>
        <li>
          <a href="./notification">
            <i class="fa-solid fa-bell"></i> Notification
          </a>
        </li>
        <li>
          <a href="" class="nav-setting">
            <i class="fa-solid fa-gear"></i> Setting
          </a>
        </li>
        <li class="reset">
          <ul>
            <li>
              <a href="" data-toggle="modal" data-target="#userPassword"
                onclick="userResetPasswordFunction('<%- user[0]._id %>')">
                Reset User password
              </a>
            </li>
            <li>
              <a href="" data-toggle="modal" data-target="#adminPassword"
                onclick="adminResetPasswordFunction('<%- admin[0]._id %>')">
                Rest Admin password
              </a>
            </li>
          </ul>
        </li>
        <li>
          <button class="dropdown-toggle" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true"
            aria-expanded="false">
            Logout
          </button>
          <div class="dropdown-menu links" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/home">Login as user</a>
            <a class="dropdown-item" href="/">Logout</a>
          </div>
        </li>
      </ul>
    </div>
  </div>

  <!-- RIGHT SECTION STARTS -->

  <div class="right-section">
    <div class="admin-head">
      <div class="showDate"></div>
      <a class="btn" data-toggle="modal" data-target="#logoutModal"> Logout </a>
    </div>

    <div class="admin-content">
      <div class="header">
        <h2> Admin Dashboard </h2>
        <p> Welcome to the admin Dashboard, love to see you back again</p>
      </div>

      <div class="cards">
        <div class="card">
          <div class="icon">
            <i class="fa-brands fa-discourse color1"></i>
            <div>
              <p class="num">
                <%- courses.length %>
              </p>
              <p class="txt">Reg</p>
            </div>
          </div>
          <p class="text"> Courses </p>
        </div>
        <div class="card">
          <div class="icon">
            <i class="fa fa-list color2"></i>
            <div>
              <p class="num">
                <%- events.length %>
              </p>
              <p class="txt">Reg</p>
            </div>
          </div>
          <p class="text"> Events </p>
        </div>
        <div class="card">
          <div class="icon">
            <i class="fa-sharp fa-solid fa-street-view color3"></i>
            <div>
              <p class="num">
                <%- students.length %>
              </p>
              <p class="txt">Reg</p>
            </div>
          </div>
          <p class="text"> Students </p>
        </div>
        <div class="card">
          <div class="icon">
            <i class="fa-solid fa-person-chalkboard color4"></i>
            <div>
              <p class="num">
                <%- teachers.length %>
              </p>
              <p class="txt">Reg</p>
            </div>
          </div>
          <p class="text"> Teachers </p>
        </div>
        <div class="card">
          <div class="icon">
            <i class="fa-solid fa-bell color5"></i>
            <div>
              <p class="num">
                <%- notifications.length %>
              </p>
              <p class="txt">Reg</p>
            </div>
          </div>
          <p class="text"> Notifications </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Confirm Logout Section Starts -->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title font-weight-bold text-xl" id="exampleModalLabel"> LOGOUT </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          Are you sure you want to Logout?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-danger"> <a href="/" style="color: white;"> Logout </a>
          </button>
        </div>
      </div>
    </div>
  </div>
  <!-- Confirm Logout Section Ends -->

  <!-- Edit User Password form Modal popup starts -->
  <div class="modal fade" id="userPassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h5 class="modal-title w-100 font-weight-semi-bold">
            RESET USER LOGIN
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action='' method="post" class="resetUser">
          <div class="modal-body mx-3">

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Login User:</label>
              <input type="text" id="defaultForm-pass" placeholder="User" class="form-control validate" name="username"
                required />
            </div>

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="password">Login Password:</label>
              <div id="input-div">
                <input type="password" id="password" placeholder="Reset Password" class="form-control validate"
                  name="password" required />
                <i class="fa fa-eye-slash" onclick="userEyeToggler()"></i>
              </div>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <input class="btn" data-target="#modalLoginForm" type="submit" value="Reset" />
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Edit form Modal popup ends -->

  <!-- Edit Admin Password form Modal popup starts -->
  <div class="modal fade" id="adminPassword" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
    aria-hidden="true" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header text-center">
          <h5 class="modal-title w-100 font-weight-semi-bold">
            RESET ADMIN LOGIN
          </h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <form action='' method="post" class="resetAdmin">
          <div class="modal-body mx-3">

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="defaultForm-pass">Login Admin:</label>
              <input type="text" id="defaultForm-pass" placeholder="User" class="form-control validate" name="username"
                required />
            </div>

            <div class="md-form mb-4">
              <label data-error="wrong" data-success="right" for="password">Login Password:</label>
              <div id="input-div">
                <input type="password" id="password" placeholder="Reset Password"
                  class="password2 form-control validate" name="password" required />
                <i class="fa fa-eye-slash eye2" onclick="adminEyeToggler()"></i>
              </div>
            </div>
          </div>
          <div class="modal-footer d-flex justify-content-center">
            <input class="btn" data-target="#modalLoginForm" type="submit" value="Reset" />
          </div>
        </form>
      </div>
    </div>
  </div>
  <!-- Edit form Modal popup ends -->


  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>

  <!-- Setting -->
  <script>
    let eye = document.querySelector(".fa-eye-slash");
    let password = document.querySelector("#password");
    let eye2 = document.querySelector(".eye2");
    let password2 = document.querySelector(".password2");
    const setting = document.querySelector('.nav-setting');
    const reset = document.querySelector('.reset');

    // User Password Eye Toggler
    const userEyeToggler = () => {
      eye.classList.toggle("fa-eye");

      if (eye.classList.contains("fa-eye")) {
        password.type = "text";
      } else {
        password.type = "password";
      }
    };

    // Admin Password Eye Toggler
    const adminEyeToggler = () => {
      eye2.classList.toggle("fa-eye");

      if (eye2.classList.contains("fa-eye")) {
        password2.type = "text";
      } else {
        password2.type = "password";
      }
    };


    setting.addEventListener('click', (e) => {
      e.preventDefault()

      reset.classList.toggle('opensetting');
    })

  </script>

  <!-- Coustom JS link -->
  <script src="/js/admin.js"></script>
</body>

</html>