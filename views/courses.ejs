<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <!-- Custom Style Link -->
  <link rel="stylesheet" href="./css/style.css" />

  <!-- Courses Style link -->
  <link rel="stylesheet" href="./css/admin.css" />

  <!-- Font awesome link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" />

  <!-- Bootstrap PopUp link -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />

  <title>Admin</title>
</head>

<body>
  <div class="main-container">
    <!-- LEFT SECTION STARTS -->
    <div class="left-section">

      <div class="nav-toggler">
        <span></span>
      </div>

      <div class="title">
        <a><span>A</span>dmin</a>
      </div>

      <div class="nav">
        <ul>
          <li>
            <a href="./admin">
              <i class="fa fa-home"></i> Home
            </a>
          </li>
          <li>
            <a href="/courses" class="active">
              <i class="fa-brands fa-discourse"></i> Courses
            </a>
          </li>
          <li>
            <a href="/events"> <i class="fa fa-list"></i> Events </a>
          </li>
          <li>
            <a href="/students">
              <i class="fa-sharp fa-solid fa-street-view"></i> Students
            </a>
          </li>
          <li>
            <a href="/teachers">
              <i class="fa-solid fa-person-chalkboard"></i> Teachers
            </a>
          </li>
          <li>
            <a href="/notification">
              <i class="fa-solid fa-bell"></i> Notification
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- RIGHT SECTION STARTS -->
    <div class="table-section">
      <div class="table-container">
        <div class="table-header">
          <h2>Courses</h2>
          <button class="btn" data-toggle="modal" data-target="#modalLoginForm">
            Add Course
          </button>
        </div>

        <!-- Add course Popup -->

        <!-- Modal -->

        <div class="modal fade" id="modalLoginForm" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true" data-keyboard="false" data-backdrop="static">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-semi-bold">
                  Add Course
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <form action="/courses">
                <div class="modal-body mx-3">
                  <div class="md-form mb-3">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Image:</label>
                    <input type="file" id="defaultForm-file" class="form-control validate" name="image" required />
                  </div>

                  <div class="md-form mb-3">
                    <label data-error="wrong" data-success="right" for="defaultForm-email">Name:</label>
                    <input type="text" id="defaultForm-email" class="form-control validate" name="title" required />
                  </div>

                  <div class="md-form mb-4">
                    <label data-error="wrong" data-success="right" for="defaultForm-pass">Description:</label>
                    <textarea type="password" id="defaultForm-pass" class="form-control validate" name="description"
                      required /></textarea>
                  </div>
                </div>
                <div class="modal-footer d-flex justify-content-center">
                  <input class="btn" data-target="#modalLoginForm" type="submit" value="Add">

                </div>
              </form>
            </div>
          </div>
        </div>
        <!-- Add course Popup ends -->

        <div style="overflow-x:auto;">
          <table>
            <tr>
              <th>S/N</th>
              <th>Image</th>
              <th>Name</th>
              <th>Description</th>
              <th>Action</th>
            </tr>

            <tbody>
              <% courses.forEach((course, index)=> { %>
                <tr>
                  <td> <%- index %></td>
                  <td> <%- course.image %></td>
                  <td> <%- course.title %></td>
                  <td> <%- course.description %></td>
                  <td>
                    <a href="#" class="fa-solid fa-eye"></a>
                    <a href="#" class="fa-solid fa-pen"></a>
                    <a href="/delete/<%- course._id %>" class="fa-solid fa-trash-can"></a>
                  </td>
                </tr>
                <% }) %>
            </tbody>

          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Optional JavaScript -->
  <!-- jQuery first, then Popper.js, then Bootstrap JS -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
    integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
    integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
    crossorigin="anonymous"></script>


  <!-- Coustom JS link -->
  <script src="/js/script.js"></script>
</body>

</html>